<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<Pane xmlns:fx="http://javafx.com/fxml" fx:controller="cs112.lab09.controllers.MapController">

    <!-- Background Map Image -->
    <ImageView layoutX="0" layoutY="0" fitWidth="800" fitHeight="600" pickOnBounds="true" preserveRatio="true"/>

    <!-- Buttons over the map -->
    <Button fx:id="cityStateButton" layoutX="200" layoutY="150" text="New York" onAction="#handleCityStateButton"/>
    <Button fx:id="otherCityStateButton" layoutX="400" layoutY="300" text="Los Angeles" onAction="#handleOtherCityStateButton"/>

</Pane>
